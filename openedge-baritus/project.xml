<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
	<pomVersion>3</pomVersion>
	<groupId>openedge</groupId>
	<id>baritus</id>
	<name>OpenEdge Baritus</name>
	<currentVersion>1.0</currentVersion>
	<organization>
		<name>Open Edge</name>
		<url>http://www.openedge.nl/</url>
