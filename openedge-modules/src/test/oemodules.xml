<?xml version="1.0"?>
<components-config>

	<scheduler properties="/quartz.properties">

		<trigger name="testTrigger" group="DEFAULT"
				 class="org.quartz.SimpleTrigger">
			<parameter name="repeatInterval" value="2000"/>
			<parameter name="repeatCount" value="-1"/>
		</trigger>
		
		<jobExecutionMap>
			<job trigger="testTrigger" component="QuartzTest" />
		</jobExecutionMap>

	</scheduler>
	
	<components>
		
		<component name="ThrowAwayTest" 
				class="nl.openedge.modules.test.ThrowAwayComponentImpl"/>
		
		<component name="SingletonTest" 
				class="nl.openedge.modules.test.SingletonComponentImpl"/>
				
		<component name="ConfigurableTest" 
				class="nl.openedge.modules.test.ConfigurableComponentImpl">	
			<param1 attr="foo"/>
			<param2>
				Bar
			</param2>		
		</component>
		
		<component name="ChainedEventTest" 
				class="nl.openedge.modules.test.ChainedEventCasterComponentImpl"/>
			
		<component name="ChainedEventTestObserver" 
				class="nl.openedge.modules.test.ChainedEventObserverImpl"/>
		
		<component name="BeanTest" 
				class="nl.openedge.modules.test.BeanComponentImpl">
				
			<property name="myString" value="test"/>
			<property name="myInteger" value="12"/>
			
			<property name="nested.anotherString" value="anotherTest"/>
		
		</component>
		
		<component name="QuartzTest"
				class="nl.openedge.modules.test.QuartzJobComponentImpl">
				
			<jobDetail group="DEFAULT">
				<parameter name="msg" value="this is a test job"/>
			</jobDetail>
				
		</component>
		
		<component name="BlancoTest"
				class="nl.openedge.modules.test.BlancoComponentImpl"/>

		<component name="SchedulerObserverTest"
				class="nl.openedge.modules.test.SchedulerObserverImpl"/>
	
		<component name="ComponentsLoadedObserverTest"
				class="nl.openedge.modules.test.ComponentsLoadedObserverImpl"/>
			
		<component name="DependendComponentTest"
				class="nl.openedge.modules.test.DependentComponentImpl">
				
			<dependency componentName="BeanTest" propertyName="beanComponent"/>
			<dependency componentName="ConfigurableTest" propertyName="configComponent"/>
			
		</component>
		
		<component name="ThreadSingletonTest" 
				class="nl.openedge.modules.test.ThreadSingletonComponentImpl"/>
			
	</components>
	
</components-config>