<?xml version="1.0"?>
<modules-config>

	<scheduler properties="/quartz.properties">

		<trigger name="testTrigger" group="DEFAULT"
				 class="org.quartz.SimpleTrigger">
			<parameter name="repeatInterval" value="2000"/>
			<parameter name="repeatCount" value="-1"/>
		</trigger>
		
		<jobExecutionMap>
			<job trigger="testTrigger" module="QuartzTest" />
		</jobExecutionMap>

	</scheduler>
	
	<modules>
		
		<module name="ThrowAwayTest" 
				class="nl.openedge.modules.test.ThrowAwayModuleImpl"/>
		
		<module name="SingletonTest" 
				class="nl.openedge.modules.test.SingletonModuleImpl"/>
				
		<module name="ConfigurableTest" 
				class="nl.openedge.modules.test.ConfigurableModuleImpl">	
			<param1 attr="foo"/>
			<param2>
				Bar
			</param2>		
		</module>
		
		<module name="CriticalTest" 
				class="nl.openedge.modules.test.CriticalModuleImpl"/>
			
		<module name="CriticalTestObserver" 
				class="nl.openedge.modules.test.CriticalEventObserverImpl"/>
		
		<module name="BeanTest" 
				class="nl.openedge.modules.test.BeanModuleImpl">
				
			<property name="myString" value="test"/>
			<property name="myInteger" value="12"/>
		
		</module>
		
		<module name="QuartzTest"
				class="nl.openedge.modules.test.QuartzJobModuleImpl">
				
			<jobDetail group="DEFAULT">
				<parameter name="msg" value="this is a test job"/>
			</jobDetail>
				
		</module>
		
		<module name="BlancoTest"
				class="nl.openedge.modules.test.BlancoTypeImpl"/>

		<module name="SchedulerObserverTest"
				class="nl.openedge.modules.test.SchedulerObserverImpl"/>
	
		<module name="ModulesLoadedObserverTest"
				class="nl.openedge.modules.test.ModulesLoadedObserverImpl"/>
			
		<module name="DependendModuleTest"
				class="nl.openedge.modules.test.DependendModuleImpl">
				
			<dependency moduleName="BeanTest" propertyName="beanModule"/>
			<dependency moduleName="ConfigurableTest" propertyName="configModule"/>
			
		</module>
			
	</modules>
	
</modules-config>