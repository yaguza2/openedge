<?xml version="1.0"?>
<maverick version="2.0" default-view-type="document" default-transform-type="document">

	<commands>

		<!-- ***************************** main site ***************************** -->

		<command name="index">
			<view path="/home.vm">
			</view>
		</command>

		<command name="login">
			<controller class="com.foo.LoginCtrl">
				<param name="loginModule" value="MyLoginModule" />
			</controller>
			<view name="success" type="redirect" />
			<view name="error" path="/login.vm">
				<transform path="/loginlayout.vm" />
			</view>
		</command>

		<command name="logoff">
			<controller class="com.foo.LogoffCtrl" />
			<view path="index.m" />
		</command>

	</commands>

</maverick>
