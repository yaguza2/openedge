<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd"
>


<web-app>

	<display-name>Authorization Test</display-name>
	<description>Authorization Test</description>

	<!-- Filter configuratie -->
	<filter>
		<filter-name>OEAccess</filter-name>
		<filter-class>nl.openedge.access.AccessFilter</filter-class>
		<init-param>
			<param-name>loginRedirect</param-name>
			<param-value>/login.m</param-value>
		</init-param>
	</filter>

	<filter>
		<filter-name>SessionFilter</filter-name>
		<filter-class>nl.openedge.util.web.SessionFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>OEAccess</filter-name>
		<url-pattern>*.m</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>SessionFilter</filter-name>
		<url-pattern>*.m</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>nl.openedge.util.web.SessionListener</listener-class>
	</listener>

	<!-- Application & Velocity Servlet Configuration -->
	<servlet>
		<servlet-name>Application</servlet-name>
		<servlet-class>nl.promedico.asp.authotest.web.ApplicationServlet</servlet-class>
		<!--OpenEdge libs -->
		<init-param>
			<param-name>oeaccess.configFile</param-name>
			<param-value>WEB-INF/oeaccess.properties</param-value>
		</init-param>
		<init-param>
			<param-name>oemodules.configFile</param-name>
			<param-value>WEB-INF/oemodules.xml</param-value>
		</init-param>
		<!-- velocity parameters -->
		<init-param>
			<param-name>org.apache.velocity.toolbox</param-name>
			<param-value>/WEB-INF/velocity-toolbox.xml</param-value>
		</init-param>
		<init-param>
			<param-name>org.apache.velocity.properties</param-name>
			<param-value>/WEB-INF/velocity.properties</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<!-- Maverick Servlet -->
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<display-name>Maverick Dispatcher</display-name>
		<servlet-class>org.infohazard.maverick.Dispatcher</servlet-class>
		<init-param>
			<param-name>reloadCommand</param-name>
			<param-value>reloadconfig</param-value>
		</init-param>
		<init-param>
			<param-name>reuseMaverickContext</param-name>
			<param-value>false</param-value>
		</init-param>
		<load-on-startup>3</load-on-startup>
	</servlet>

	<!-- Maverick mapping -->
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>*.m</url-pattern>
	</servlet-mapping>

	<!-- velocity mapping -->
	<servlet-mapping>
		<servlet-name>Application</servlet-name>
		<url-pattern>*.vm</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>15</session-timeout>
	</session-config>

	<!-- The Welcome File List -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
