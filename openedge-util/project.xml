  <dependencies>

    <dependency>
      <id>servletapi</id>
      <version>2.3</version>
    </dependency>

    <dependency>
      <id>commons-beanutils</id>
      <version>1.6.1</version>
      <url>http://jakarta.apache.org/commons/beanutils/</url>
    </dependency>

    <dependency>
      <id>commons-dbcp</id>
      <version>1.0</version>
      <url>http://jakarta.apache.org/commons/dbcp/</url>
    </dependency>

    <dependency>
      <id>commons-lang</id>
      <version>1.0.1</version>
      <url>http://jakarta.apache.org/commons/lang/</url>
    </dependency>
    
    <dependency>
      <id>commons-collections</id>
      <version>3.0-dev</version>
      <properties>
      	<war.bundle.jar>true</war.bundle.jar>
      </properties>
      <url>http://jakarta.apache.org/commons/collections/</url>
    </dependency>
    
    <dependency>
      <id>commons-logging</id>
      <version>1.1-dev</version>
      <url>http://jakarta.apache.org/commons/logging/</url>
    </dependency>
    
    <dependency>
      <id>jdom</id>
      <version>b8</version>
      <url>http://www.jdom.org/</url>
    </dependency>
	
    <dependency>
      <id>dom4j</id>
      <version>1.4-dev-8</version>
      <url>http://www.dom4j.org/</url>
    </dependency>
    
    <dependency>
      <id>jstl</id>
      <version>1.0</version>
      <url>http://java.sun.com/products/jsp/jstl/</url>
    </dependency>
    
    <dependency>
      <id>jakarta-taglibs-standard</id>
      <version>1.0.3</version>
      <url>http://jakarta.apache.org/taglibs/</url>
    </dependency>
    
    <dependency>
      <id>hibernate</id>
      <version>2.0.2</version>
      <url>http://hibernate.bluemars.net/</url>
    </dependency>
    
    <dependency>
      <id>velocity</id>
      <version>1.4-dev</version>
      <properties>
      	<war.bundle.jar>true</war.bundle.jar>
      </properties>
      <url>http://jakarta.apache.org/velocity/</url>
    </dependency>
    
    <dependency>
      <id>velocity-tools</id>
      <version>0.9</version>
      <properties>
      	<war.bundle.jar>true</war.bundle.jar>
      </properties>
      <url>http://jakarta.apache.org/velocity/toolsubproject.html</url>
    </dependency>

  </dependencies>

  <build>
    <nagEmailAddress>info@openedge.nl</nagEmailAddress>
    
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/src/test</directory>
          <includes>
          	<include>**/*.properties</include>
          	<include>**/*.xml</include>
          	<include>**/*.xsd</include>
          	<include>**/*.dtd</include>
          	<include>**/*.vm</include>
          	<include>**/*.config</include>
			<include>**/*.cfg</include>
          	<include>**/*.policy</include>
          </includes>
        </resource>
      </resources>
    </unitTest>

    <resources>
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
          <include>**/*.xsd</include>
          <include>**/*.dtd</include>
          <include>**/*.vm</include>
          <include>**/*.config</include>
        </includes>
      </resource>
    </resources>

  </build>

