		</dependency>

		<dependency>
			<id>velocity-tools</id>
			<version>1.0</version>
			<url>http://jakarta.apache.org/velocity/toolsubproject.html</url>
		</dependency>

		<dependency>
			<groupId>openedge</groupId>
			<artifactId>baritus</artifactId>
			<version>1.0</version>
			<type>jar</type>
			<url>http://baritus.sourceforge.net</url>
		</dependency>
		
		<dependency>
			<id>maverick</id>
			<version>2.2.0</version>
			<url>http://mav.sourceforge.net/</url>
		</dependency>

		<dependency>
			<id>hibernate</id>
			<version>2.1.2</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
			<url>http://www.hibernate.org/</url>
		</dependency>
		
		<dependency>
			<groupId>jetty</groupId>
			<artifactId>jetty</artifactId>
			<version>4.2.19</version>
			<type>jar</type>
