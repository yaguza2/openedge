<?xml version="1.0" encoding="ISO-8859-1"?>

<project>
  <pomVersion>3</pomVersion>
  <id>openedge-velocity-stringresources</id>
  <name>OpenEdge Velocity String resources</name>
  <currentVersion>1.0</currentVersion>
  <organization>
    <name>Open Edge</name>
    <url>http://www.openedge.nl/</url>
    <logo>http://www.openedge.nl/images/logo.jpg</logo>
  </organization>
  <inceptionYear>2003</inceptionYear>
  <package>nl.openedge.util</package>
  <logo>http://www.openedge.nl/images/logo.jpg</logo>
  <shortDescription>A Velocity Resource loader that works with Strings.</shortDescription>
  <description>OpenEdge Velocity String resources is a Velocity Resource loader that works with Strings.</description>
  <url>http://maven.apache.org/</url>

 	<versions>
		<version>
			<id>1.0</id>
			<name>1.0</name>
			<tag>B1_0</tag>
		</version>
	</versions>
 <branches></branches>
  <mailingLists>
  </mailingLists>
  
  <developers>
    <developer>
      <name>Eelco Hillenius</name>
      <id>eelco</id>
      <email>eelco.hillenius@openedge.nl</email>
      <organization>Open Edge</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
      <timezone>+1</timezone>
    </developer>
  </developers>

  <dependencies>
    
    <dependency>
      <id>commons-collections</id>
      <version>3.0-dev</version>
      <properties>
      	<war.bundle.jar>true</war.bundle.jar>
      </properties>
      <url>http://jakarta.apache.org/commons/collections/</url>
    </dependency>
    
    <dependency>
      <id>commons-logging</id>
      <version>1.1-dev</version>
      <url>http://jakarta.apache.org/commons/logging/</url>
    </dependency>
    
    <dependency>
      <id>velocity</id>
      <version>1.4-dev</version>
      <properties>
      	<war.bundle.jar>true</war.bundle.jar>
      </properties>
      <url>http://jakarta.apache.org/velocity/</url>
    </dependency>


  </dependencies>

  <build>
    <nagEmailAddress>info@openedge.nl</nagEmailAddress>
    
    <sourceDirectory>src/java</sourceDirectory>

    <resources>
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
          <include>**/*.xsd</include>
          <include>**/*.dtd</include>
          <include>**/*.vm</include>
          <include>**/*.config</include>
        </includes>
      </resource>
    </resources>

  </build>

</project>
