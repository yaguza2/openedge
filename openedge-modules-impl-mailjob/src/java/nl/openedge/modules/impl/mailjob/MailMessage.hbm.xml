<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 1.1//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="nl.openedge.modules.impl.mailjob.MailMessage"
        table="email_queue"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
            unsaved-value="any"
        >
            <generator class="native">
            </generator>
        </id>

        <property
            name="contentType"
            type="string"
            column="content_type"
            not-null="true"
        />

        <property
            name="created"
            type="long"
            column="created"
            not-null="true"
        />

        <property
            name="sender"
            type="string"
            column="sender"
            not-null="true"
        />

        <property
            name="message"
            type="string"
            column="message"
            not-null="true"
        />

        <property
            name="sendTo"
            type="string"
            column="send_to"
            not-null="true"
        />

        <property
            name="status"
            type="string"
            column="status"
            not-null="true"
        />

        <property
            name="statusDetail"
            type="string"
            column="status_detail"
            not-null="false"
        />

        <property
            name="subject"
            type="string"
            column="subject"
            not-null="true"
        />

    </class>

</hibernate-mapping>
