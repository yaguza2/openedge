		<version>
			<id>1.3</id>
			<name>1.3</name>
			<tag>B3</tag>
		</version>
	</versions>
	<branches />
	<mailingLists></mailingLists>

	<developers>
		<developer>
			<name>Eelco Hillenius</name>
			<id>eelco</id>
			<email>eelco.hillenius@openedge.nl</email>
			<organization>Open Edge</organization>
			<roles>
				<role>Java Developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
	</developers>

	<dependencies>

		<dependency>
			<id>servletapi</id>
			<version>2.3</version>
		</dependency>

		<dependency>
			<id>commons-logging</id>
			<version>1.1-dev</version>
			<url>http://jakarta.apache.org/commons/logging/</url>
		</dependency>

		<dependency>
			<id>hibernate</id>
			<version>2.1.2</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
			<url>http://www.hibernate.org/</url>
		</dependency>

		<dependency>
			<groupId>jaf</groupId>
			<artifactId>activation</artifactId>
			<version>1.0.2</version>
		</dependency>

		<dependency>
			<id>javamail</id>
			<version>1.3</version>
		</dependency>

		<dependency>
			<id>openedge-util</id>
			<version>1.2</version>
			<url>http://www.openedge.nl</url>
		</dependency>

		<dependency>
			<id>openedge-modules</id>
			<version>1.2</version>
			<url>http://www.openedge.nl</url>
		</dependency>
		
		<dependency>
			<id>quartz</id>
			<version>1.2.3</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
			<url>http://www.quartzscheduler.org</url>
		</dependency>

	</dependencies>

	<build>
		<nagEmailAddress>info@openedge.nl</nagEmailAddress>

		<sourceDirectory>src/java</sourceDirectory>
		<unitTestSourceDirectory>src/test</unitTestSourceDirectory>

		<unitTest>
			<includes>
				<include>**/*Test.java</include>
			</includes>
			<resources>
				<resource>
					<directory>${basedir}/src/test</directory>
					<includes>
						<include>**/*.properties</include>
						<include>**/*.xml</include>
						<include>**/*.xsd</include>
						<include>**/*.dtd</include>
						<include>**/*.vm</include>
						<include>**/*.config</include>
						<include>**/*.policy</include>
						<include>**/*.ccf</include>
					</includes>
				</resource>
			</resources>
		</unitTest>

		<resources>
			<resource>
				<directory>${basedir}/src/java</directory>
				<includes>
					<include>**/*.properties</include>
					<include>**/*.xml</include>
					<include>**/*.xsd</include>
					<include>**/*.dtd</include>
					<include>**/*.vm</include>
					<include>**/*.config</include>
					<include>**/*.ccf</include>
				</includes>
			</resource>
		</resources>
	</build>

</project>
