	</organization>
	<inceptionYear>2003</inceptionYear>
	<package>nl.openedge.modules.impl.mailjob</package>
	<logo>http://www.openedge.nl/images/logo.jpg</logo>
	<shortDescription>e-mail job and module implementation(s)</shortDescription>
	<description />
	<url>http://maven.apache.org/</url>

	<versions>
		<version>
			<id>1.4</id>
			<name>1.4</name>
			<tag>B1_4</tag>
		</version>
		<version>
			<id>1.3</id>
			<name>1.3</name>
			<tag>B3</tag>
		</version>
		<version>
			<id>1.2</id>
