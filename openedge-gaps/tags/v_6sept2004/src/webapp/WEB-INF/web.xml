	<!-- Applicatie Servlet -->
	<servlet>
		<servlet-name>Application</servlet-name>
		<display-name>Applicatie Servlet</display-name>
		<servlet-class>nl.levob.allureplan.web.ApplicationServlet</servlet-class>
		<init-param>
			<param-name>in-test-mode</param-name> <!-- true of false/ null -->
			<param-value>true</param-value>
		</init-param>
		<!--
		<init-param>
			<param-name>oeaccess.configFile</param-name>
			<param-value>WEB-INF/oeaccess.properties</param-value>
		</init-param>
		<init-param>
			<param-name>oemodules.configFile</param-name>
			<param-value>WEB-INF/oemodules.xml</param-value>
		</init-param>
		-->
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- Maverick Servlet -->
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<display-name>Maverick Dispatcher</display-name>
		<servlet-class>org.infohazard.maverick.Dispatcher</servlet-class>
		<init-param>
			<param-name>reloadCommand</param-name>
			<param-value>reloadconfig</param-value>
		</init-param>
		<init-param>
			<param-name>reuseMaverickContext</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>defaultRequestCharset</param-name>
			<param-value>iso-8859-1</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<!-- Velocity Servlet Configuration -->
	<servlet>
		<servlet-name>Velocity</servlet-name>
		<servlet-class>org.apache.velocity.tools.view.servlet.VelocityViewServlet</servlet-class>
		<init-param>
			<param-name>org.apache.velocity.toolbox</param-name>
			<param-value>/WEB-INF/velocity-toolbox.xml</param-value>
		</init-param>
		<init-param>
			<param-name>org.apache.velocity.properties</param-name>
			<param-value>/WEB-INF/velocity.properties</param-value>
		</init-param>
		<load-on-startup>3</load-on-startup>
	</servlet>

	<!-- Maverick mapping -->
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>*.m</url-pattern>
	</servlet-mapping>

	<!-- velocity mapping -->
	<servlet-mapping>
		<servlet-name>Velocity</servlet-name>
		<url-pattern>*.vm</url-pattern>
	</servlet-mapping>

    <!-- session timeout configuratie -->
	<session-config>
		<session-timeout>15</session-timeout>
	</session-config>

	<!-- The Welcome File List -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
