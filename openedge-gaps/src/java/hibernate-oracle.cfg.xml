<!DOCTYPE hibernate-configuration PUBLIC 
	"-//Hibernate/Hibernate Configuration DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-2.0.dtd">

<hibernate-configuration>

	<session-factory>
		
		<property name="show_sql">false</property>
		<property name="dialect">net.sf.hibernate.dialect.Oracle9Dialect</property>

		<property name="connection.url">jdbc:oracle:thin:@testserver:1521:ontw</property>
		<property name="connection.driver_class">oracle.jdbc.OracleDriver</property>
		<property name="connection.username">GAPS_UNIT</property>
		<property name="connection.password">GAPS_UNIT</property>
		
		<mapping resource="nl/openedge/gaps/core/parameters/impl/ParameterWrapper.hbm.xml"/>
		<mapping resource="nl/openedge/gaps/core/groups/impl/GroupWrapper.hbm.xml"/>
		<mapping resource="nl/openedge/gaps/core/versions/Version.hbm.xml"/>

	</session-factory>
	
</hibernate-configuration>